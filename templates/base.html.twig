<!DOCTYPE html>
<html lang="es">
    <head>
    	{% block head %}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %} - SymfoPlaces</title>
       
        <link rel="stylesheet" type="text/css" href="{{ asset('css/app.css')}}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="shortcut icon" type="image/png" href="{{ asset('images/template/logo.png') }}">
        {% endblock %}
    </head>
    <body class="containter p-3">
    	{% block login %}
    		{% if is_granted("IS_AUTHENTICATED_FULLY") %}
    			<div class="my-1 text-end">
    				<a href="{{ path('home') }}">
    					{{ app.user.displayname }}
    					<span style="font-size: 0.8em">({{ app.user.email }})</span>
    				</a>
    				-
    				<a href="{{ path('app_logout') }}">Logout</a>
    			</div>
				<div class="my-1 text-end">
					<a href="{{ path('home') }}">Ver perfil de usuario</a>
				</div>
    		{% else %}
    			<div class="my-1 text-end">
    				<a href="{{ path('app_login') }}">
    					LogIn
    					<img src="{{ asset('images/buttons/login.png') }}" alt="login" height="25" width="25">
    				</a>
    				/
    				<a  href="{{ path('app_register') }}">
    					Registro
    					<img src="{{ asset('images/buttons/register.png') }}"
    					alt="register" height="25" width="25">
    				</a>
    			</div>
    		{% endif %}
    	{% endblock %}
    	{% block header %}
    	<header class="row border bg-light">
    		<figure class="col-4 text-end">
			<a href="/" >
    				<img class="h-auto" alt="logo" src="{{ asset('images/template/logo.png') }}">
    			</a>
			</figure>	
    		<div class="col-8">
    		<hgroup>
    			<h1>SymfoPlaces</h1>
    			<h2>Página de sitios que te han gustado</h2>
    		</hgroup>
    		</div>
    	</header>
    	{% endblock %}
    	{% block nav %}
    	<div class="row">
    		<nav class="col-9">
    			<ul class="nav nav-pills">
    			<li class="nav-item mr-2">
    				<a class="nav-link {{ app.request.get('_route')=='portada'?'active' }}" href="{{ path('portada') }}">Inicio</a>
    			</li>
    			<li class="nav-item mr-2">
    			<a class="nav-link {{ app.request.get('_route')=='place_list'?'active' }}" href="{{ path('place_list') }}">Lista de lugares</a>
    			</li>
    			
    			<li class="nav-item mr-2">
    			<a class="nav-link {{ app.request.get('_route')=='place_search'?'active' }}" href="{{ path('place_search') }}">Búsqueda de lugares</a>
    			</li>
    			{% if is_granted('create', entityFaker.getMock('Place')) %}
    			<li class="nav-item mr-2">
    			<a class="nav-link {{ app.request.get('_route')=='place_create'?'active' }}" href="{{ path('place_create') }}">Nuevo lugar</a>
    			</li>
    			{% endif %}
    			</ul>
    		</nav>
    		<div class="col-3 pt-2 text-end">
    			{{"now"|date('d/m/Y H:i', timezone="Europe/Madrid")}}
    		</div>
    	</div>
    	{% endblock %}
    	<main class="my-3">
    	{% block success %}
    		{% for message in app.flashes('success') %}
    			<div class="alert alert-success">
    				{{message}}
    			</div>
    		{% endfor %}
    	{% endblock %}
    	
    	{% block main %}
    	{% endblock %}
    	</main>
    	{% block footer %}
    		<footer class="page-footer font-small p-4 bg-light">
    		SymfoPlaces
    		</footer>
    	{% endblock %}
    </body>
</html>
