{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<!--    <h1>Registro</h1>-->
	<div class="bg-light border row align-items-center justify-content-center my-3 p-2">
		<div class="row">
			<div class="col-8">
				<h3 class="my-2">Registro de usuario</h3>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.displayname, {label: 'Nombre'}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}       
        <div class="col-4 text-center">
        	<h4 class="my-2">Previsualización</h4>
        	<figure class="my-2 p-2">
        		<img id="preview"
        				class="rounded border movie-cover"
        				style="max-width: 220px"
        				src="{{ asset('images/users/default.jpg') }}">
        	<figcaption class="my-3 text-center">
        		Imagen de usuario
        	</figcaption>
        	</figure>
        </div>
        {{ form_row(registrationForm.fotografia, {label: 'Foto'}) }}
        <h3 class="mt-3">Términos y condiciones</h3>
        <p>No vendemos tus datos. Las notificaciones que recibirás son las de verificar email 
        y en el caso de olvidar tu password.</p>
        <div class="text-center">
        {{ form_row(registrationForm.agreeTerms,{label: 'Acepto los términos'}) }}
		{{form_rest(registrationForm) }}
        <button type="submit" class="btn btn-primary">Registro</button>
    {{ form_end(registrationForm) }}
{% endblock %}
