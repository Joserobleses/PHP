{% extends 'base.html.twig' %}
{% block title %}Portada{% endblock %}
{% block main %}
	{{ parent() }}
	<div class="bg-light border row align-items-center justify-content-center my-3">		
		<div class="col m-3 p-3 text-start">
			<h1>{{place.nom}}</h1>
			<p><b>Descripcion Sitio</b> : {{place.descriptionplace }}</p>
			<p><b>País</b> : {{place.pais }}</p>
			<p><b>Población</b> : {{place.poblacio }}</p>
			<p><b>Tipo</b> : {{place.tipus }}</p>
			<p><b>Valoracion</b> : {{place.valoracio}}</p>
		</div>
		{% if place.getUser() %}
			<p> Informacion aportada por <i>{{ place.getUser().displayname  }}</i>
			</p>
		{% endif %}
		<h2>Fotos</h2>
		<div class="d-flex align-items-strecht">
		<div class="card" style="width: 18rem;">
				<a href="{{ path('place_show',{'id':place.id}) }}">
					<img class="rounded border movie-cover" style="max-width:240px"
						alt="imagen de {{place.foto}}"
						title="imagen de {{place.foto}}"
						src="{{ asset(photos_directory~'/'~(place.foto ?? 'default.jpg')) }}" ><!-- alt+alt Gr + 4 + espacio ~ -->
				</a>
				<div class="card-body">	
					<a href="{{ path('place_show',{'id':place.id}) }}" class="btn btn-primary">
						{{place.nom}}
					</a>
				</div>
			</div>
		</div>
<!-- ----------------------------------------------------------------------------------- -->

		<h2>Fotos</h2>
		{% if place.getPhotoss()|length >0 %}
			<h3>Lista de fotos</h3>
			{% set fotos = place.getPhotoss() %}
			{% include '/includes/lista_photos.html.twig'  %}
		{% else %}
			<p>No hay fotos todavía</p>
		{% endif %}
		



<!-- ----------------------------------------------------------------------------------- -->
		<h2>Comentarios</h2>
		{% if place.getComments()|length >0 %}
			<h3>Lista de comentarios</h3>
			{% set comments = place.getComments() %}
			{% include '/includes/lista_comments.html.twig'  %}
		{% else %}
			<p>No hay comentarios todavía</p>
		{% endif %}
		<h3>Nuevo comentario</h3>
		<div class="bg-light border row align-items-center justify-content-center my-3 p-1">
		{{ form_start(formulario) }}
			<div class="row">
			
				<div class="col">{{ form_row(formulario.commenttext, { 'value': '' }) }}</div>
				
				{{ form_rest(formulario) }}
			</div>
			{{ form_end(formulario) }}
		</div>
		<div class="text-center">
			<a href="{{ path('place_list') }}" ><img src="{{ asset('images/buttons/list.png') }}" alt="lista" title="Volver al listado" height="40" width="40"></a>
			<a href="{{ path('place_edit',{'id':place.id}) }}" ><img src="{{ asset('images/buttons/update.png') }}" alt="modificar" title="modificar" height="40" width="40"></a>
			<a href="{{ path('place_delete',{'id':place.id}) }}" ><img src="{{ asset('images/buttons/delete.png') }}" alt="borrar" title="borrar" height="40" width="40"></a>
			
		</div>
	</div>
	{% endblock %}